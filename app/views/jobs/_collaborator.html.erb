<h1>Vagas da Empresa: <%=collaborator_job.name %></h1>
<dl>
  <% collaborator_job.jobs.each do |item| %>
    <dt><strong>Título:</strong></dt>
    <dd> <%= item.title %></dd>

    <dt>Nível</dt>
    <dd><%= item.level %></dd>

    <dt>Expira em:</dt>
    <dd><%= l(item.expiration_date) %></dd>

    <dt>Quantidade de Vagas:</dt>
    <dd><%= item.total_job %></dd>

    <dt>Status</dt>
    <dd><%= item.disabled? ? 'Desabilitada' : 'Habilitada' %></dd>
    <%= link_to 'Exibir', job_path(item) %>

    <% if item.enabled? %>
      <%= link_to 'Editar', edit_job_path(item) %>
      <%= link_to 'Desabilitar', disabled_job_path(item), method: :post %>
    <% end %>

  <% end %>
</dl>